@model List<WA_ControlInventario.Models.ProductoDTO>

<h2>Lista de Productos</h2>

<table class="table">
    <thead>
        <tr>
            <th style="display: none;">ID</th>
            <th>Nombre del Producto</th>
            <th>Descripción</th>
            <th>Fecha de Creacion</th>
            <th>Creado Por</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var producto in Model)
        {
            <tr>
                <td style="display: none;">@producto.ProductoId</td>
                <td>@producto.NombreProducto</td>
                <td>@producto.Descripcion</td>
                <td>@producto.FechaCreacion</td>
                <td>@producto.CreadoPor</td>
                <td>
                    <a href="@Url.Action("EditarProducto", "Producto", new { id = producto.ProductoId })" class="btn btn-success">Editar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    @Html.ActionLink("Regresar", "Index", "Home", null, new { @class = "btn btn-outline-secondary" })
</div>